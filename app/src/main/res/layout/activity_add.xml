<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:textDirection="rtl"
    tools:context=".ActivityAdd">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:textDirection="rtl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="مهامي اليومية"
        app:titleTextAppearance="@style/ToolbarFontStyle"/>

    <!-- إضافة صورة في منتصف الشاشة بعد الـ Toolbar -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/add_task"
    app:layout_constraintTop_toBottomOf="@id/main_toolbar"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp"/>

    <!-- عنوان المهمة -->

    <!-- حقل إدخال عنوان المهمة -->

    <TextView
        android:id="@+id/txt_viewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/cairo_medium"
        android:text="عنوان المهمة"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <EditText
        android:id="@+id/add_title"
        android:layout_width="0dp"
        android:textColor="@color/black"
        android:layout_height="50dp"
        android:textDirection="rtl"
        android:hint="أدخل عنوان المهمة"
        android:textSize="18sp"
        android:background="@drawable/dotted_border"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_viewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp" />

    <!-- نوع المهمة -->

    <!-- Spinner لاختيار نوع المهمة -->

    <TextView
        android:id="@+id/txt_viewType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/cairo_medium"
        android:text="جدد نوع اولوية المهمة"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_title" />

    <Spinner
        android:id="@+id/spinner_taskType"
        android:layout_width="0dp"
        android:textDirection="rtl"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:background="@drawable/dotted_border"

        app:layout_constraintTop_toBottomOf="@id/txt_viewType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp" />

    <!-- اختيار تاريخ المهمة -->

    <TextView
        android:id="@+id/txt_viewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/cairo_medium"
        android:text=" حدد تاريخ المهمة"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_taskType" />

    <Button
        android:id="@+id/btn_pickDate"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="اختر التاريخ"

        android:textSize="18sp"
        android:background="@drawable/dotted_button"
        app:layout_constraintTop_toBottomOf="@id/txt_viewDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp" />

    <!-- اختيار وقت المهمة -->

    <TextView
        android:id="@+id/txt_viewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/cairo_medium"
        android:text="وقت المهمة"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_pickDate" />

    <Button
        android:id="@+id/btn_pickTime"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="اختر الوقت"
        android:textSize="18sp"
        android:background="@drawable/dotted_button"
        app:layout_constraintTop_toBottomOf="@id/txt_viewTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp" />

    <!-- زر إضافة المهمة -->
    <Button
        android:id="@+id/btn_save"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="إضافة المهمة"
        android:textSize="20sp"

        android:background="@drawable/dotted_button"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_pickTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
