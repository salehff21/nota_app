<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    app:cardBackgroundColor="@color/light_pink"
    app:cardElevation="10dp"
    android:layout_margin="16dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:src="@drawable/edit_listed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_bold"
            android:text="تعــديل الـمهــــام"
            android:layout_gravity="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit_title"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/border_button"
            android:fontFamily="@font/cairo_medium"
            android:gravity="center"
            android:hint="عنوان المهمة" />

        <Spinner
            android:id="@+id/edit_type"
            android:layout_width="300dp"
            android:layout_height="50dp"

            android:layout_marginTop="10dp"
            android:background="@drawable/border_button"
            android:fontFamily="@font/cairo_medium"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/edit_date"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_button"
            android:drawableStart="@drawable/ic_date"
            android:drawablePadding="8dp"
            android:fontFamily="@font/cairo_medium"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="لم يتم اختيار تاريخ بعد"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/edit_time"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_button"
            android:drawableStart="@drawable/ic_time"
            android:drawablePadding="8dp"
            android:fontFamily="@font/cairo_medium"
            android:gravity="center"
            android:textSize="20dp"
            android:padding="10dp"
            android:text="لم يتم اختيار وقت بعد"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:textDirection="rtl"
            android:layout_marginBottom="40dp">

            <Button
                android:id="@+id/Edit_btn_cancel"
                android:layout_width="145dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/border_button"
                android:fontFamily="@font/cairo_medium"
                android:text="إلغاء"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/Edite_btn_save"
                android:layout_width="145dp"
                android:layout_height="50dp"
                android:background="@drawable/border_button"
                android:fontFamily="@font/cairo_medium"
                android:text="حفظ"
                android:textColor="@color/white" />


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>